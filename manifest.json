{
  "manifest_version": 2,
  "author": "Kristian Jabilles",

  "name": "Weather Today",
  "description": "The most easy to use weather extension and displays the weather based on your location.",
  "version": "1.1",

  "browser_action": {
    "default_icon": "src/assets/img/icon.png",
    "default_popup": "src/index.html"
  },
  "icons": {
    "16": "src/assets/img/icon.png",
    "128": "src/assets/img/icon_128.png"
  },
  "permissions": [
    "geolocation",
    "http://api.openweathermap.org/*",
    "https://*.google.com/*"
  ]
}
